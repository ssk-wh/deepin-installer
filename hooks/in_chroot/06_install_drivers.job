# Install drivers with ubuntu-drivers-common
ubuntu-drivers autoinstall || \
  warn "Failed to install drivers via 'ubuntu-drivers autoinstall'"

if lspci -n | grep -i 10de | egrep -i '.*03(80|0[0-2])' ;then
  if [ $(installer_get "DI_ENABLE_NVIDIA_DRIVER") ];then
    install_package nvidia-driver
  fi
fi
